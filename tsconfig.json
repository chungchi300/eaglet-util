{
  "compilerOptions": {
    "outDir": "dist",

    "target": "es5",
    "lib": ["es5", "es6"],

    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": false,
    "stripInternal": true,
    "pretty": true,
    "strictNullChecks": false,
    "noUnusedLocals": false
  },
  "include": ["src", "bin"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "src/__tests__",
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist"
  ]
}
